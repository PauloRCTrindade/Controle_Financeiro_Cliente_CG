{% extends "layout.njk" %}

{% block content %}

  <div class="card">
    <section class='avatar' style="background:url(https://images.unsplash.com/photo-1485808269728-77bb07c059a8?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60/500x500) no-repeat center center / cover"></section>

    <section class="detalhes">
      <form method="POST" action="/membros?_method=PUT">

        <h2 id='title-card'> Editar Dados Pessoais</h2>

        {% include 'fields.njk' %}

        <button type="submit">Salvar</button>

        <input type="hidden" name="id" value={{membro.id}}>

      </form>

      <form id="form-delete" action="/membros?_method=DELETE" method="post">
      
        <button id="botao-delete" type="submit">Deletar</button>
        <input type="hidden" name="id" value={{membro.id}}>
          
      </form>

    </section>
      
    

    
  </div>  

{% endblock content %}