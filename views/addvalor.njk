{% extends "layout.njk" %}

{% block content %}

  <form class="card" method="POST" action="/addvalor">
    <section class='avatar' style="background:url(https://images.unsplash.com/photo-1485808269728-77bb07c059a8?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60/500x500) no-repeat center center / cover"></section>

      <section class="detalhes">
        <h2 id='title-card'> Lançamentos</h2>

        

  <div class="item">
    <div>Valor</div>
    <div>
      <input type="number" 
      name="valor" 
      placeholder="digite um valor">
  </div>

  <div class="item">
    <div>Data do lançamento</div>
    <div>
      <input type="date" 
      name="data">
    </div>
  </div>

  
  </div>       
        <button type="submit">Lançar</button>
        <input type="hidden" name="id" value={{membro.id}}>
      </section>

  </form>
    

{% endblock content %}